@model EditUserViewModel
@using HourglassAzure.Models

<form asp-action="EditUser" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Editar usuário" })
    <div class="modal-body form-horizontal">
        <div class="row">            
            <div class="form-group">
                <label asp-for="Name" class="col-lg-3 col-sm-3 control-label">Nome do usuário</label>
                <div class="col-lg-6">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>            

            <div class="form-group">
                <label asp-for="ApplicationRoleId" class="col-lg-3 col-sm-3 control-label">Perfil do usuário</label>
                <div class="col-lg-6">
                    <select asp-for="ApplicationRoleId" asp-items="@Model.ApplicationRoles" class="form-control">
                        <option>Selecione o perfil</option>
                    </select>
                </div>
               </div>
            </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>















